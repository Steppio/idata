<!doctype html>
<html>
	<head>
		<title><%= title %></title>
		<link rel="stylesheet" type="text/css" href="stylesheets/app.css">
		<script type="text/javascript" src="js/jquery.js"></script>
	</head>
	<body>
		<section class="topbar">
			<div class="row2 cf">
				<% if(userFullName) { %>
					<h2>Hello <%=userFullName%></h2>
					<a href="/signout"><i class="signout fa fa-sign-out">&nbsp;</i> Sign Out</a>
				<% } else { %>
					<a href="/signup"><i class="signup fa fa-pencil-square-o ">&nbsp;</i> Sign Up</a>
					<a href="/signin"><i class="signin fa fa-sign-in">&nbsp;</i> Sign In</a>
				<% } %>
			</div>
		</section>
		<div class="row2 cf">
			<div class="logo">
				<img src="img/logo.jpg" alt="Logo">
			</div>

			<div class="search-controls">
				<div class="input-group">
					<input type="text" class="form-control" placeholder="Search for...">
					<span class="input-group-btn">
						<button class="btn btn-default" type="button">Go!</button>
					</span>
			    </div><!-- /input-group -->
			</div>

			<% include global/navigation %>

		</div>

		<div class="main">
			<div class="currently-viewing">
				<div class="row2 cf">
					<p>Currently viewing 'Bogstandard Law Firm'</p>
				</div>
			</div>

			<div class="row2 main-page cf">

				<!-- MARKETING NAVIGATION -->
				<% include marketing/navigation %>

				<!-- CRM NAVIGATION -->
				<% include crm/navigation %>

				<!-- QUALIFY NAVIGATION -->
				<% include qualify/navigation %>

				<div class="right-content">

					<!-- MARKETING PAGE -->
					<% include marketing/content %>

					<!-- CRM PAGE -->
					<% include crm/content %>

					<!-- QUALIFY PAGE -->
					<% include qualify/content %>

				</div>
			</div>

			<div class="hex">
				&nbsp;
			</div>
			&nbsp;
		</div>

